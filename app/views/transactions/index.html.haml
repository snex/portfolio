%p#notice= notice
%h1 Transactions
%table
  %thead
    %tr
      %th Date
      %th Quantity
      %th Price paid
      %th Investment
      %th Financial asset
      %th{:colspan => "3"}
  %tbody
    - @transactions.each do |transaction|
      %tr
        %td= transaction.date
        %td= transaction.quantity
        %td= transaction.price_paid
        %td= transaction.investment
        %td= transaction.financial_asset_id
        %td= link_to 'Show', transaction
        %td= link_to 'Edit', edit_transaction_path(transaction)
        %td= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Transaction', new_transaction_path
